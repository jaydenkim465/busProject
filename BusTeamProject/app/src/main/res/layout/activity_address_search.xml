<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SettingActivity">

    <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:queryHint="주소를 입력하세요"
            app:iconifiedByDefault="false" />

    <ListView
        android:id="@+id/list_view_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_view_address"
        tools:visibility="visible" />

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_empty_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="검색 결과가 없습니다."
            android:gravity="center"
            android:visibility="visible"
            tools:visibility="gone"
    />

</androidx.constraintlayout.widget.ConstraintLayout>